package com.jsp.movieapp.service.imp;

import javax.persistence.EntityManager;
import javax.persistence.Query;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jsp.movieapp.dao.UserDao;
import com.jsp.movieapp.entity.User;
import com.jsp.movieapp.service.UserService;

@Service
public class UserServiceImp implements UserService{

	@Autowired
	UserDao userDao;
	
	@Autowired
	EntityManager entityManager;
	@Override
	public User saveUser(User user) {
		
		return userDao.saveUser(user);
	}

	@Override
	public User findUserById(int id) {
		
		return userDao.findUserById(id);
	}

	@Override
	public User login(String email, String password) {
		Query query = entityManager.createQuery("select u from User u where u.email=?1 and password=?2");
		try {
			
			return (User) query.getSingleResult();
		}
		catch (Exception e) {
			throw new RuntimeException("Invalid crendiatals");
		}
	}
	

}
