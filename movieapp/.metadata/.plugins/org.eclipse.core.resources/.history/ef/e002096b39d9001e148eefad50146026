package com.jsp.movieapp.config;

import org.springframework.context.ConfigurableApplicationContext;
import org.springframework.context.annotation.AnnotationConfigApplicationContext;

import com.jsp.movieapp.entity.Theater;
import com.jsp.movieapp.service.TheaterService;

public class MainClass {

	public static void main(String[] args) {
		
		ConfigurableApplicationContext applicationContext=new AnnotationConfigApplicationContext(ServletConfig.class);
		
		Theater theater=new  Theater();
		theater.setName("amb");
		theater.setAddress("gurugram");
		TheaterService bean = applicationContext.getBean(TheaterService.class);
		bean.saveTheater(theater);
	}
}
